{
  "name": "fftrans",
  "version": "0.0.9",
  "description": "FFTrans - Final Fantasy XIV Real-time Translation Assistant",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint src/main.js src/module/system/ipc-module.js src/module/ipc/translate-ipc.js src/module/system/request-module.js src/html/config.js src/html/js/language.js",
    "typecheck": "node --check src/main.js",
    "test": "node --check src/main.js src/module/system/ipc-module.js src/module/ipc/translate-ipc.js src/module/system/request-module.js src/html/config.js src/html/js/language.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/raydocs/tataru",
  "keywords": [
    "ffxiv",
    "translator",
    "final-fantasy",
    "translation",
    "tts"
  ],
  "author": "raydocs (https://github.com/raydocs)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.20.1",
    "globals": "^15.15.0"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "axios": "^1.11.0",
    "chokidar": "^3.5.3",
    "crypto-js": "^4.2.0",
    "csv-parser": "^3.2.0",
    "decompress": "^4.2.1",
    "nodejs-file-downloader": "^4.13.0",
    "openai": "^6.8.1",
    "sharp": "^0.34.5",
    "string-similarity": "^4.0.4",
    "temp": "^0.9.4",
    "tesseract.js": "^6.0.1"
  },
  "build": {
    "appId": "com.app.tataru.assistant",
    "productName": "Tataru Assistant",
    "directories": {
      "output": "build"
    },
    "extraFiles": [
      "src/data",
      "!src/data/img/*.png",
      "!src/data/text/readme",
      "!src/data/text/non-ai",
      "!src/data/text/hidden",
      "!src/data/text/**/hidden",
      "!src/data/tataru-assistant-reader",
      "!src/data/screen-capture",
      "eng.traineddata",
      "actions-latest.json",
      "signatures-global-latest.json",
      "signatures.json",
      "statuses-latest.json",
      "structures-global-latest.json",
      "zones-latest.json"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*"
    ],
    "npmRebuild": true,
    "buildDependenciesFromSource": true,
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "icon": "src/html/img/icon/tataru.ico",
      "target": "nsis",
      "extraFiles": [
        "src/data/tataru-assistant-reader",
        "src/data/screen-capture"
      ]
    },
    "nsis": {
      "createStartMenuShortcut": true,
      "createDesktopShortcut": "always"
    }
  }
}